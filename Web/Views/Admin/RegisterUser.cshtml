@model Infrastructure.Models.Users

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("RegisterUser", "Admin", FormMethod.Post))
{
<table>
    
    <tr>
        <td>@Html.LabelFor(x=>x.FirstName)</td>
        <td>@Html.TextBoxFor(x=>x.FirstName)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(x=>x.LastName)</td>
        <td>@Html.TextBoxFor(x=>x.LastName)</td>
    </tr>
     <tr>
        <td>@Html.LabelFor(x=>x.UserName)</td>
        <td>@Html.TextBoxFor(x=>x.UserName)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x=>x.Password)</td>
        <td>@Html.PasswordFor(x=>x.Password)</td>
    </tr>
    <tr>
        <td>Confirm Password</td>
        <td>@Html.Password("ConfirmPassword")</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x=>x.Email)</td>
        <td>@Html.TextBoxFor(x=>x.Email)</td>
    </tr>

    <tr>
        <td></td>
        <td><input type="submit" value="Register" /></td>
    </tr>
</table>
}